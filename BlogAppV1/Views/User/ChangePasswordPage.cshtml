@model BlogAppV1.ViewModels.PassChangeVm

@inject BlogAppV1.Entities.DTOs.CurrentUserDto CurrentUser

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Change Password</title>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="flex-column col-md-2">
                <ul class="list-unstyled">
                    <li>
                        <a asp-action="ProfileOf" asp-controller="User" asp-route-username="@CurrentUser.Username">
                            Your Info
                        </a>
                    </li>
                    <li>
                        <h1>Change Password</h1>
                    </li>
                    <li>
                        <a asp-action="DeleteAccount" asp-controller="User">
                            Delete Account
                        </a> 
                    </li>
                </ul>
            </div>
            <div class="flex-column col-md-10 border-left border-top border-dark">
                <form asp-controller="User" asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="OldPassword" class="control-label"></label>
                        <input asp-for="OldPassword" />
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input asp-for="NewPassword" />
                    </div>
                    <hr />
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-5">
                            <input type="submit" class="btn btn-outline-primary" 
                                   value="Change Password" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>